<h2>Employee List</h2>
<a href="/Employee/Create">Add Employee</a>
<table border="1">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Department</th>
        <th>Salary</th>
        <th>Actions</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Age</td>
            <td>@emp.Department</td>
            <td>@emp.Salary</td>
            <td>
                <a href="/Employee/Edit/@emp.Id">Edit</a> |
                <a href="/Employee/Delete/@emp.Id">Delete</a>
            </td>
        </tr>
    }
</table>
